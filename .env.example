# Personal Assistant Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/assistant_db

# AI/LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
AI_MODEL=gpt-4  # or claude-sonnet-4-20250514

# Google Workspace Configuration
GOOGLE_CREDENTIALS_PATH=./google_credentials.json
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id-here
GOOGLE_WORKSPACE_DOMAIN=your-company.com

# Fellow.app Integration (if using)
FELLOW_API_KEY=your-fellow-api-key
FELLOW_WORKSPACE_ID=your-workspace-id

# Tactiq Integration (if using)
TACTIQ_API_KEY=your-tactiq-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Redis for task queue
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Automation Settings
AUTO_EXECUTE_THRESHOLD=0.85
ENABLE_EMAIL_AUTOMATION=false
ENABLE_DOCUMENT_AUTOMATION=false

# Reminder Settings
DEFAULT_REMINDER_DAYS=3
URGENT_REMINDER_DAYS=1
NOTIFICATION_CHANNELS=email,slack

# File Storage
UPLOAD_DIR=./uploads
TEMPLATE_DIR=./templates
BACKUP_DIR=./backups